name = Watershed
description = Parent theme for sub-themes released with Watershed Now distro. This theme is not meant to be used on its own. Wateshed and its child themes are a variation on the <a href="http://drupal.org/project/basic" target="_blank">Basic starter theme</a>.
screenshot = images/screenshot.gif
core = "6.x"
project = "watershed"
engine = phptemplate

regions[header] = Header
; We call sidebars "left" and "right" b/c those are phptemplate defaults.
regions[left] = First sidebar
regions[right] = Second sidebar
regions[callout] = Callout
regions[content_top] = Content top
regions[notes] = Notes
regions[preface] = Content preface
regions[content_bottom] = Content bottom
; We use regions[footer] for first footer b/c most themes use this region.
regions[footer_first] = First footer
regions[footer_second] = Second footer
regions[footer] = Footer

features[] = logo
features[] = name
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

stylesheets[all][] = css/default.css
stylesheets[all][] = css/layout.css
stylesheets[all][] = css/style.css
stylesheets[all][] = css/hp_callout.css
stylesheets[all][] = css/follow.css
stylesheets[print][] = css/print.css

settings[watershed_search_help]          = 'Explore our watershed'
settings[watershed_search_button]        = 'Go'
settings[watershed_zen_tabs]             = 1
settings[watershed_wireframe]            = 0
settings[watershed_breadcrumb]           = 0
settings[watershed_block_editing]        = 0
settings[watershed_rebuild_registry]     = 0
